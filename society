# Target basename.
pathname=$(basename $0)

# Please change this with your virtual enviroment excecutable.
virtual="/home/hxari/virtual/bin/activate"

# Clear the terminal screens.
clear

if [[ ! -f $virtual ]]; then
	echo -e "${virtual}: no such virtual environment"
	exit 1
fi

# Change current working directory.
cd $(dirname $0)

# Iterate down a (possible) chain of symlinks.
while [ -L "$pathname" ]
do
    pathname=$(readlink $pathname)
    cd $(dirname $pathname)
    pathname=$(basename $pathname)
done

# Activate the python virtual environment.
source $virtual

# Get the Society basepath.
basepath=$(pwd -P)

# Executing Society main program.
python3 ${basepath}/src/society.py "$@"

# Clear the PyCache.
if [[ $(which kurina) != "" ]]; then
	kurina ${basepath}
fi
